@model IEnumerable<AdminLteMvc.ContratoPago>

@{

    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <!-- TABLE: LATEST ORDERS -->
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">LISTADO DE CONTRATOS</h3>
                <div class="box-tools pull-right">
                    <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                </div>
            </div><!-- /.box-header -->
            <div class="box-body">
                <div class="table-responsive">
                    <form>
                        <div class="row">
                            <div class="col-lg-6 col-sm-8">
                                <label class="floating-label" for="searchTerm"> &nbsp <span class="glyphicon glyphicon-search"></span> </label>
                                <INPUT placeholder="Buscar Contrato " type="text" id="searchTerm" onkeyup="doSearch()">

                                <a href="~/Publicidads/Create"><i class="glyphicon-list-alt"></i> Nuevo Publicidad </a>
                            </div>
                        </div>
                    </form>


                    @*<p>
                        @Html.ActionLink("Nueva Publicidad", "Create")
                    </p>*@
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Fecha)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Monto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Pagado)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NoFactura)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Contrato.Descripcion)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Fecha)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Monto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Pagado)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NoFactura)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Contrato.Descripcion)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                                </td>
                            </tr>
                        }

                    </table>

                </div><!-- /.table-responsive -->
            </div><!-- /.box-body -->

        </div><!-- /.box -->
    </div><!-- /.col -->
</div><!-- /.col -->
